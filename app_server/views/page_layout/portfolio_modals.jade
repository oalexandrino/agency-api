// Portfolio Modals
// Modal 1
if homePageData[2].portfolios
	each portfolio, index in homePageData[2].portfolios
		div( id="portfolioModal" + index ).portfolio-modal.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
			.modal-dialog
				.modal-content
					.close-modal(data-dismiss='modal')
						.lr
							.rl
					.container
						.row
							.col-lg-8.mx-auto
								.modal-body
									// Project Details Go Here
									h2.text-uppercase= portfolio.name
									p.item-intro.text-muted
									img.img-fluid.d-block.mx-auto(src='/images/agency/portfolio/01-full.jpg', alt='')
									p
										= portfolio.desc
									ul.list-inline
										li Available Date: January 2017
										li Price:
									button.btn.btn-primary(data-dismiss='modal', type='button')
										i.fas.fa-times
										|                   Close Project