// Services
section#services.page-section
	.container
		.row
			.col-lg-12.text-center
				h2.section-heading.text-uppercase Services
				h3.section-subheading.text-muted= homePageData[1].services[0].title
		.row.text-center
			if homePageData[1].services
				each service in homePageData[1].services
					.col-md-4
						span.fa-stack.fa-4x
							i.fas.fa-circle.fa-stack-2x.text-primary
							i.fas.fa-shopping-cart.fa-stack-1x.fa-inverse
						h4.service-heading= service.title
						p.text-muted
							= service.description